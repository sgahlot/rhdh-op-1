{
  "description": "Configuration for the S3 Viewer plugin",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "s3": {
      "type": "object",
      "required": [
        "bucketLocatorMethods",
        "bucketRefreshSchedule"
      ],
      "properties": {
        "bucketRefreshSchedule": {
          "description": "If defined, it sets the schedule used to refresh the list of buckets",
          "visibility": "backend"
        },
        "bucketLocatorMethods": {
          "visibility": "backend",
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "type": {
                    "visibility": "backend",
                    "type": "string",
                    "const": "config"
                  },
                  "platforms": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": [
                        "accessKeyId",
                        "endpoint",
                        "region",
                        "secretAccessKey"
                      ],
                      "properties": {
                        "endpoint": {
                          "description": "The endpoint where the platform can be reached.",
                          "visibility": "backend",
                          "type": "string"
                        },
                        "region": {
                          "description": "The region where the platform can be reached.",
                          "visibility": "backend",
                          "type": "string"
                        },
                        "name": {
                          "description": "Optional name for the platform. If not set, defaults to the platform endpoint.",
                          "visibility": "backend",
                          "type": "string"
                        },
                        "accessKeyId": {
                          "visibility": "secret",
                          "type": "string"
                        },
                        "secretAccessKey": {
                          "visibility": "secret",
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "required": [
                  "platforms",
                  "type"
                ]
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "visibility": "backend",
                    "type": "string",
                    "const": "radosgw-admin"
                  },
                  "platforms": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": [
                        "accessKeyId",
                        "endpoint",
                        "region",
                        "secretAccessKey"
                      ],
                      "properties": {
                        "endpoint": {
                          "description": "The endpoint where the radogw-admin can be reached.",
                          "visibility": "backend",
                          "type": "string"
                        },
                        "region": {
                          "description": "The region where the platform can be reached.",
                          "visibility": "backend",
                          "type": "string"
                        },
                        "name": {
                          "description": "Optional name for the platform. If not set, defaults to the platform endpoint.",
                          "visibility": "backend",
                          "type": "string"
                        },
                        "accessKeyId": {
                          "visibility": "secret",
                          "type": "string"
                        },
                        "secretAccessKey": {
                          "visibility": "secret",
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "required": [
                  "platforms",
                  "type"
                ]
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "visibility": "backend",
                    "type": "string",
                    "const": "iam-role"
                  },
                  "platforms": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": [
                        "endpoint",
                        "region"
                      ],
                      "properties": {
                        "endpoint": {
                          "description": "The endpoint where the radogw-admin can be reached.",
                          "visibility": "backend",
                          "type": "string"
                        },
                        "region": {
                          "description": "The region where the platform can be reached.",
                          "visibility": "backend",
                          "type": "string"
                        },
                        "name": {
                          "description": "Optional name for the platform. If not set, defaults to the platform endpoint.",
                          "visibility": "backend",
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "required": [
                  "platforms",
                  "type"
                ]
              }
            ]
          }
        },
        "allowedBuckets": {
          "description": "An optional white-list of buckets per platform name.",
          "visibility": "backend",
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "buckets",
              "platform"
            ],
            "properties": {
              "platform": {
                "description": "The platform name",
                "visibility": "backend",
                "type": "string"
              },
              "buckets": {
                "description": "A list of bucket names that are allowed to be displayed in the platform.\nThey can be defined with regex patterns as well.",
                "visibility": "backend",
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "permissionMiddleware": {
          "description": "If set to `true` the permissionMiddleware will be enabled. The default one will be used, but it can be customized.\nThe permissionMiddleware is required if the permissions setup is used.",
          "visibility": "backend",
          "type": "boolean"
        }
      }
    }
  }
}
